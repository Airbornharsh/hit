{
  "name": "hit",
  "displayName": "hit",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hit.signIn",
        "title": "Sign In",
        "category": "Hit",
        "icon": "$(sign-in)"
      },
      {
        "command": "hit.showCommitMessageInput",
        "title": "Show Input",
        "category": "Hit",
        "icon": "$(edit)"
      },
      {
        "command": "hit.actionButton",
        "title": "Action Button",
        "category": "Hit",
        "icon": "$(play)"
      },
      {
        "command": "hit.toggleFolderHierarchy",
        "title": "Toggle Tree/List View",
        "category": "Hit",
        "icon": "$(list-unordered)"
      },
      {
        "command": "hit.refresh",
        "title": "Refresh",
        "category": "Hit",
        "icon": "$(refresh)"
      },
      {
        "command": "hit.stage",
        "title": "Stage Changes",
        "category": "Hit",
        "icon": "$(add)"
      },
      {
        "command": "hit.unstage",
        "title": "Unstage Changes",
        "category": "Hit",
        "icon": "$(remove)"
      },
      {
        "command": "hit.discard",
        "title": "Discard Changes",
        "category": "Hit",
        "icon": "$(discard)"
      },
      {
        "command": "hit.openDiff",
        "title": "Open Diff",
        "category": "Hit",
        "icon": "$(diff)"
      }
    ],
    "views": {
      "hit-sidebar": [
        {
          "id": "hitSourceControl",
          "name": "Source Control",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "hit.toggleFolderHierarchy",
          "when": "view == hitSourceControl",
          "group": "navigation"
        },
        {
          "command": "hit.refresh",
          "when": "view == hitSourceControl",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "hit.stage",
          "when": "view == hitSourceControl && (viewItem == uncommitted-file || viewItem == uncommitted-folder || viewItem == uncommitted-section)",
          "group": "inline"
        },
        {
          "command": "hit.discard",
          "when": "view == hitSourceControl && (viewItem == uncommitted-file || viewItem == uncommitted-folder || viewItem == uncommitted-section)",
          "group": "inline"
        },
        {
          "command": "hit.unstage",
          "when": "view == hitSourceControl && (viewItem == staged-file || viewItem == staged-folder || viewItem == staged-section)",
          "group": "inline"
        },
        {
          "command": "hit.openDiff",
          "when": "view == hitSourceControl && (viewItem == staged-file || viewItem == uncommitted-file)",
          "group": "navigation@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hit-sidebar",
          "title": "Source Control",
          "icon": "$(git-branch)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  }
}
